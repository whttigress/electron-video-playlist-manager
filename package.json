{
  "name": "video-playlist-manager",
  "productName": "Video and Playlist Manager",
  "description": "This app creates ACG playlists for videos within a specified folder and it's subflders.",
  "author": "Rhiannon Martinez",
  "private": true,
  "engines": {
    "node": ">=v16.13",
    "npm": ">=8.1"
  },
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "build": "node scripts/build.js",
    "precompile": "cross-env MODE=production npm run build",
    "compile": "electron-builder build --config electron-builder.config.js",
    "pretest": "npm run build",
    "test": "node tests/app.spec.js",
    "watch": "node scripts/watch.js",
    "lint": "eslint . --ext js,ts,vue",
    "electron:generate-icons": "electron-icon-builder --input=./packages/renderer/icon.png --output=build --flatten"
  },
  "browserslist": [
    "Chrome 96"
  ],
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --cache --fix"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "1.10.1",
    "@vuetter/vite-plugin-vue-svg": "^0.1.2",
    "autoprefixer": "^10.4.0",
    "cross-env": "7.0.3",
    "electron": "16.0.3",
    "electron-builder": "22.14.5",
    "electron-devtools-installer": "3.2.0",
    "eslint": "8.3.0",
    "eslint-plugin-vue": "8.1.1",
    "lint-staged": "12.1.2",
    "playwright": "1.17.1",
    "postcss": "^8.4.5",
    "sass": "^1.38.0",
    "sass-loader": "^10.0.0",
    "simple-git-hooks": "2.7.0",
    "tailwindcss": "^3.0.7",
    "vite": "2.6.14",
    "vite-plugin-string": "^1.1.1"
  },
  "dependencies": {
    "@mdi/font": "5.9.55",
    "dayjs": "^1.10.7",
    "electron-icon-builder": "^2.0.1",
    "electron-promise-ipc": "^2.2.4",
    "electron-updater": "4.6.5",
    "ffprobe": "^1.1.2",
    "ffprobe-static": "^3.0.0",
    "ffprobe-static-electron": "^2.0.2",
    "file-regex": "^3.1.0",
    "lodash": "^4.17.21",
    "pinia": "^2.0.0-rc.15",
    "rfdc": "^1.3.0",
    "roboto-fontface": "*",
    "string-similarity": "^3.0.0",
    "vue": "3.2.23",
    "vue-router": "4.0.12",
    "vue3-clipboard": "^1.0.0",
    "vuedraggable": "^4.1.0",
    "webfontloader": "^1.0.0"
  }
}
